@{
    ViewData["Title"] = "Index";
    int count = 1;
}
@model List<Team>
<div class="col-12 ">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Color Table</h6>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end my-4">
            <a class="btn btn-outline-danger me-md-2" asp-area="Admin" asp-controller="Teams" asp-action="Create">Create</a>
        </div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Profession</th>
                    <th scope="col">Image</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Team team in Model)
                {
                    <tr>
                        <th>@count</th>
                        <td>@team.Name</td>
                        <td>@team.Profession</td>
                        <td><img src="~/assets/img/@team.ImagePath" height="150" /></td>
                        <td>
                            <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="Teams" asp-action="Update" asp-route-id="@team.Id">Update</a>
      
                            <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Teams" asp-action="Delete" asp-route-id="@team.Id">Delete</a>
                            </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
</div>
